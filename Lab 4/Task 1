#include <iostream>
using namespace std;

int main() {
    int n, target, i;
    cout << "Enter size of array: ";
    cin >> n;
    int arr[100];
    cout << "Enter " << n << " elements: ";
    
    for (i = 0; i < n; i++) {
        cin >> arr[i];
    }
    cout << "Enter number to search: ";
    cin >> target;
    bool found = false;

    for (i = 0; i < n; i++) {
        if (arr[i] == target) {
            cout << "Element found at index " << i << endl;
            found = true;
            break;
        }
    }

    if (!found) {
        cout << "Element not found in array" << endl;
    }
    return 0;
}
