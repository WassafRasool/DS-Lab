#include <iostream>
using namespace std;

class SafePointer {
    int* ptr;
public:
    SafePointer() { ptr = new int; *ptr = 0; }
    ~SafePointer() { delete ptr; }

    void setValue(int val) { *ptr = val; }
    int getValue() { return *ptr; }
    void release() {
        delete ptr;
        ptr = nullptr;
    }
};

int main() {
    const int n = 5;
    SafePointer students[n];

    cout << "Enter marks of " << n << " students:\n";
    for (int i = 0; i < n; i++) {
        int m;
        cout << "Student " << i + 1 << ": ";
        cin >> m;
        students[i].setValue(m);
    }

    cout << "\nMarks of students:\n";
    for (int i = 0; i < n; i++) {
        cout << "Student " << i + 1 << ": " << students[i].getValue() << endl;
    }

    for (int i = 0; i < n; i++) students[i].release();

    return 0;
}
