#include <iostream>
using namespace std;
int main() {
    int rows, cols;
    cout << "Enter number of benches (rows): ";
    cin >> rows;
    cout << "Enter number of seats per bench (columns): ";
    cin >> cols;

    int** seats = new int*[rows];
    for (int i = 0; i < rows; i++) {
        seats[i] = new int[cols];
        for (int j = 0; j < cols; j++) seats[i][j] = 0;
    }

    int r, c;
    char choice;
    do {
        cout << "\nEnter row (0 to " << rows - 1 << "): ";
        cin >> r;
        cout << "Enter column (0 to " << cols - 1 << "): ";
        cin >> c;
        if (r >= 0 && r < rows && c >= 0 && c < cols) seats[r][c] = 1;
        else cout << "Invalid position!" << endl;
        cout << "Do you want to fill another seat? (y/n): ";
        cin >> choice;
    } while (choice == 'y' || choice == 'Y');

    cout << "\nFinal Seating Chart:\n";
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) cout << seats[i][j] << " ";
        cout << endl;
    }

    for (int i = 0; i < rows; i++) delete[] seats[i];
    delete[] seats;
    return 0;
}

