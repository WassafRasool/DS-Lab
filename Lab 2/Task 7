#include <iostream>
using namespace std;

int main() {
    int departments;
    cout << "Enter number of departments: ";
    cin >> departments;

    int** salaries = new int*[departments];
    int* employees = new int[departments];
    double* avg = new double[departments];

    for (int i = 0; i < departments; i++) {
        cout << "\nEnter number of employees in department " << i + 1 << ": ";
        cin >> employees[i];
        salaries[i] = new int[employees[i]];

        int sum = 0, highest = -1;
        for (int j = 0; j < employees[i]; j++) {
            cout << "Enter salary of employee " << j + 1 << ": ";
            cin >> salaries[i][j];
            sum += salaries[i][j];
            if (salaries[i][j] > highest) highest = salaries[i][j];
        }
        avg[i] = (double)sum / employees[i];
        cout << "Highest salary in Department " << i + 1 << ": " << highest << endl;
    }

    int bestDept = 0;
    for (int i = 1; i < departments; i++) {
        if (avg[i] > avg[bestDept]) bestDept = i;
    }

    cout << "\nDepartment with highest average salary: Department " << bestDept + 1 
         << " (Average = " << avg[bestDept] << ")" << endl;

    for (int i = 0; i < departments; i++) delete[] salaries[i];
    delete[] salaries;
    delete[] employees;
    delete[] avg;

    return 0;
}

